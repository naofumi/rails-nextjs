<%= form_with(model: [:api, framework],
              class: "space-y-8 divide-y divide-gray-200",
              autocomplete: "off") do |form| %>
  <div class="space-y-8 divide-y divide-gray-200">
    <div class="pt-8">
      <div>
        <h3 class="text-lg leading-6 font-medium text-gray-900">Framework Information</h3>
        <p class="mt-1 text-sm text-gray-500">Enter information about the framework</p>
      </div>
      <div class="mt-6 grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6">
        <div class="sm:col-span-3">
          <%= form.label :name, class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= form.text_field :name, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md", autocomplete: "off" %>
          </div>
        </div>

        <div class="sm:col-span-3">
          <%= form.label :original_creators, class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= form.text_field :original_creators, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md", autocomplete: "off" %>
          </div>
        </div>

        <div class="sm:col-span-3">
          <%= form.label :website, class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= form.text_field :website, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md", autocomplete: "off" %>
          </div>
        </div>

        <div class="sm:col-span-3">
          <%= form.label :languages, class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= form.text_field :languages, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md", autocomplete: "off" %>
          </div>
        </div>

        <div class="sm:col-span-3">
          <%= form.label :release_year, class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= form.text_field :release_year, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md", autocomplete: "off" %>
          </div>
        </div>

        <div class="sm:col-span-3">
          <%= form.label :source_code_url, class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= form.text_field :source_code_url, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md", autocomplete: "off" %>
          </div>
        </div>

        <div class="sm:col-span-3">
          <%= form.label :related_technologies, class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= form.text_field :related_technologies, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md", autocomplete: "off" %>
          </div>
        </div>

        <div class="sm:col-span-3">
          <%= form.label :usage_statistics_url, class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= form.text_field :usage_statistics_url, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md", autocomplete: "off" %>
          </div>
        </div>

        <div class="sm:col-span-3">
          <%= form.label :category, class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= form.select :category, Category.all.map{ |c| [c.name, c.id] }, {}, {autocomplete: 'off',
                            class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md"} %>
          </div>
        </div>

        <div class="sm:col-span-6">
          <%= form.label :headline, class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= form.text_area :headline, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border border-gray-300 rounded-md", rows: "10"
            %>
          </div>
          <p class="mt-2 text-sm text-gray-500">A catchy headline.</p>
        </div>

        <div class="sm:col-span-6">
          <%= form.label :description, class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= form.text_area :description, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border border-gray-300 rounded-md", rows: "10"
            %>
          </div>
          <p class="mt-2 text-sm text-gray-500">Write a few sentences about the framework.</p>
        </div>


        <div class="sm:col-span-6">
          <div class="grid grid-cols-4 grid-rows-1 gap-4 sm:gap-6 lg:gap-8">
            <% framework.images.each.with_index do |image, i| %>
              <% if image.representable? %>
                <%= framework_image image.representation(resize_to_limit: [500, 500]), "Remix image #{i}" %>
              <% end %>
            <% end %>
          </div>


          <label for="cover-photo" class="block text-sm font-medium text-gray-700"> Cover photo </label>
          <div class="space-y-1 text-center">
            <div class="flex text-sm text-gray-600">
              <%= form.label :images, class: "" do %>
                <span>Upload a file</span>
                <%= form.file_field :images, multiple: true, direct_upload: true %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>

  </div>

  <div class="pt-5">
    <div class="flex justify-end">
      <button type="button" class="bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">Cancel</button>
      <button type="submit" class="ml-3 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">Save</button>
    </div>
  </div>
<% end %>
